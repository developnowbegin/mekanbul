extends layout
include fonksiyonlar/yildiz
block content
  .row.page-header
    .col-lg-12
      h1 #{mekanBaslik}
  .row 
    .col-xs-12.col-md-12 
      .row 
        .col-xs-12.col-sm-6 
          p.rating 
            +puanOlustur(mekanDetay.puan)
          p Centrum Garden Avm 
          .panel.panel-primary 
            .panel-heading 
              h2.panel-title Açılış Saatleri
            .panel-body
              each saat in mekanDetay.saatler
                p 
                  | #{saat.gunler}:&nbsp;
                  if(saat.kapali)
                    | Kapalı
                  else 
                    | #{saat.acilis}-#{saat.kapanis}
          .panel.panel-primary
            .panel-heading
              h2.panel-title Neler Var ?
            .panel-body
              span.label.label-warning Dünya Kahveleri 
              | &nbsp;
              span.label.label-warning Kekler 
              | &nbsp;
              span.label.label-warning Pastalar
              | &nbsp;
        .col-xs-12.col-sm-6
          .panel.panel-primary
            .panel-heading
              h2.panel-title Konum Bilgisi
            .panel-body
              -var enlem = 37.78
              -var boylam = 30.56
              img.img-responsive.img-rounded(src='http://maps.googleapis.com/maps/api/staticmap?center='+enlem+','+boylam+'&zoom=12&size=600x400&markers='+enlem+','+boylam+'&key=AIzaSyCmmKygTpBzHGOZEciJpAdxC9v_tWHagnE')
  .row
    .col-xs-12 
      .panel.panel-primary 
        .panel-heading 
          a.btn.btn-default.pull-right(href='/mekan/yorum/yeni') Yeni Yorum Ekle
          h2.panel-title Müşteri Yorumları
        .panel-body.review-container 
          .row 
            .review 
              .well.well-sm.review-header 
                span.rating 
                span.glyphicon.glyphicon-star
                span.glyphicon.glyphicon-star
                span.glyphicon.glyphicon-star
                span.glyphicon.glyphicon-star
                span.glyphicon.glyphicon-star-empty
                span.review-author Melih Sinan Açıkgöz
                small.reviewTimestamp &nbsp; 14 Ekim 2022
              .col-xs-12 
                p Kahveleri harika.
